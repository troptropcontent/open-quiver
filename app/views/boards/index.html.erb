
<div class="container">
<h1>All our boards</h1>
<%= simple_form_for(Board.new) do |f| %>
  <%= f.input :category, collection: Board::CATEGORY %>
<% end %>

  <div class="content">
    <div class="boards">
      <% @boards.each do |board| %>
        <div class="board">

        </div>
      <% end %>
    </div>
    <div id="map"
      style="width: 100%; height: 600px;"
      data-markers=""
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>